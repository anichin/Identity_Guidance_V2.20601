<UserControl x:Class="AOrder.OrderTracking.Client.LoginView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border BorderBrush="Black" BorderThickness="1" Height="200" Width="400" VerticalAlignment="Top">
		<Grid Margin="10,10,10,10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="35" />
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" FontWeight="Bold" FontSize="20" FontFamily="Corbel" TextWrapping="Wrap" HorizontalAlignment="Center" Text="Order Tracking client application first authenticates against Litware issuer using 'LITWARE\rick' credentials. Then, the token is sent to Adatum issuer to get an Adatum token to access a-Order service." />

			<Button Grid.Row="1" Content="Continue with login..." Command="{Binding LoginCommand}" HorizontalAlignment="Center" Width="Auto" Margin="0,0,0,10" />

		</Grid>
	</Border>

</UserControl>